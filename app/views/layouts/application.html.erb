<!DOCTYPE html>
<html>
  <head>
    <title>Fantasy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-full navbar-dark bg-primary">
      <%= link_to 'Fantasy Skeleton', root_path, class: 'navbar-brand' %>
      <nav class="nav navbar-nav">
        <% if logged_in? %>
          <%= link_to 'Users', '#', class: 'nav-item nav-link' %>
          <%= link_to 'Leagues', leagues_path, class: 'nav-item nav-link' %>
          <%= link_to "Log out", logout_path, method: "delete", class: 'nav-item nav-link' %>
        <% else %>
          <%= link_to 'Login', login_path, class: 'nav-item nav-link' %>
        <% end %>
      </nav>
    </header>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@league, @team] do |f| %>
    <%= render 'shared/error_messages', object: @team %>
    <fieldset class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Join the league", class: "btn btn-primary" %>
    </fieldset>

    <% end %>
  </div>
</div>
